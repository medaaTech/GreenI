<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RewardsActivity">
    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/recyclelogo"
                android:layout_width="410dp"
                android:layout_height="91dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_recyclelogo" />

            <ImageButton
                android:id="@+id/ic_lightbulb"
                android:layout_width="410dp"
                android:layout_height="86dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_lightbulb" />

            <ImageButton
                android:id="@+id/ic_tree"
                android:layout_width="410dp"
                android:layout_height="85dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_tree" />

            <ImageButton
                android:id="@+id/ic_turtule"
                android:layout_width="410dp"
                android:layout_height="82dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_turtule" />

            <ImageButton
                android:id="@+id/ic_windmill"
                android:layout_width="410dp"
                android:layout_height="64dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_windmill" />

            <ImageButton
                android:id="@+id/ic_solarpanel"
                android:layout_width="410dp"
                android:layout_height="57dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_solarpanel" />
        </LinearLayout>
    </ScrollView>



    <ImageButton
        android:id="@+id/button_mapActivity"
        android:layout_width="90dp"
        android:layout_height="68dp"
        android:scaleType="fitXY"
        android:background="@android:color/white"
        android:src="@drawable/ic_mapicon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_QrScannerActivity"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.954" />

    <ImageButton
        android:id="@+id/button_QrScannerActivity"
        android:layout_width="87dp"
        android:layout_height="65dp"
        android:scaleType="fitXY"
        android:background="@android:color/white"
        android:src="@drawable/ic_qrcodeicon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.954" />

    <ImageButton
        android:id="@+id/button_mainActivity"
        android:layout_width="90dp"
        android:layout_height="64dp"
        android:layout_marginStart="37dp"
        android:scaleType="fitXY"
        android:background="@android:color/white"
        android:src="@drawable/ic_reviewicon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toEndOf="@+id/button_QrScannerActivity"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.955" />

</androidx.constraintlayout.widget.ConstraintLayout>